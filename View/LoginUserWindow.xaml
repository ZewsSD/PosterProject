<Window x:Class="Poster.View.LoginUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poster.View"
        mc:Ignorable="d"
        Title="LoginUserWindow" MinHeight="196" MinWidth="253" MaxHeight="201" MaxWidth="260">
    <Grid>
        <StackPanel Margin="3">
            <TextBlock Text="Выбирите город" FontSize="20" Margin="3"/>
            <ComboBox MinWidth="100" Margin="3" ItemsSource="{Binding Cities}" SelectedItem="{Binding SelectedCity}"/>
            <TextBlock Text="Выбирите кинотеатр" FontSize="20" Margin="3"/>
            <ComboBox MinWidth="100" Margin="3" ItemsSource="{Binding Cinemas}" SelectedItem="{Binding SelectedCinema}"/>
            <Button Content="Подтвердить выбор" FontSize="20" Margin="3" Command="{Binding CreatePosterWindow}"
                    CommandParameter="{Binding SelectedCity}"/>
        </StackPanel>
    </Grid>
</Window>
